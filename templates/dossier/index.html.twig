{% extends 'base.html.twig' %}

{% block title %}Список досье{% endblock %}

{% block body %}
    <h1>Список досье</h1>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Порядковый номер</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for dossier in dossiers %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ dossier.surname }}</td>
                <td>{{ dossier.number }}</td>
                <td>
                    <a href="{{ path('dossier_edit', {'id': dossier.id}) }}">Редактировать</a>
                    {{ include('dossier/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
